@{
    ViewData["Title"] = "Login";
}
@model MQTTDashboard.Models.LoginViewModel
<div class="card">
    <article class="card-body">
        <h4 class="card-title text-center mb-4 mt-1">@ViewData["Title"]</h4>
        <div class="validation" asp-validation-summary="All">

        </div>
        <form method="post" asp-controller="Account" asp-action="Login">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new {@class = "form-control input-group", @name = "E-mail", @placeholder = "E-mail"})
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new {@class = "form-control input-group", @name = "Password", @placeholder = "Password"})
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block" asp-action="Login">Login</button>
            </div> <!-- form-group// -->
            <p class="text-center"><a href="forgot" class="btn">Forgot password?</a></p>
        }
